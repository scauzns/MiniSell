<view>
    <view class="login-icon">
        <image class="login-img" src="../../assets/images/login/dsp.jpg"></image>
    </view>
    <view class="login-from">
        <form bindsubmit='doLogin'>
            <!--账号-->
            <view class="inputView">
                <image class="nameImage" src="../../assets/images/login/username.png"></image>
                <label class="loginLabel">昵称</label>
                <input name="name" value='nathan' class="inputText" placeholder="请输入昵称" />
            </view>
            <view class="line"></view>

            <!--密码-->
            <view class="inputView">
                <image class="keyImage" src="../../assets/images/login/password.png"></image>
                <label class="loginLabel">密码</label>
                <input name="password" value='111' class="inputText" password="true" placeholder="请输入密码" />
            </view>

            <!--按钮-->
            <view>
                <button class="loginBtn" type="primary" form-type='submit'>登录</button>
            </view>

            <view>
                <button class="goRegistBtn" type="warn" bindtap="goRegistPage">没有账号？点击注册</button>
            </view>
        </form>
    </view>
</view>