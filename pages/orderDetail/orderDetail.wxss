/* pages/orderDetail/orderDetail.wxss */
.order-id {
  padding-left: 20%;
  color: #888;
}

.addre2{
  margin-left:30rpx;
  display: flex;
  justify-content: space-between;
   line-height:60rpx;
   font-size:27rpx;
}
.addre2 .left{
	display: flex;
	flex-direction: column;
	width:90%;
}
.addre2 .left .area{
	float:right;
}
.addre2 .left_bottom{
	padding-left:40rpx;
	color:#888;
}
.left_top image{
  width:30rpx;
	padding-top:10rpx;
	margin-right:10rpx;
}


.order-details-item {
  display: flex;
  padding: 20rpx;
  align-items: center;
  border: 1px solid #eee;
}

.item-icon {
  width: 60rpx;
}

.item-img {
  width: 200rpx;
}

.item-img image {
  width: 160rpx;
  height: 180rpx;
  border-radius: 16rpx;
}

.item-info {
  flex: 1;
  width: 300rpx;
}

.item-info .title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.price-count {
  display: flex;
  margin-top: 40rpx;
  justify-content: space-between;
}

.price {
  color: #ff5777;
  font-size: 40rpx;
}

.send-cost {
  border-top: 2px solid #eee;
}

.Total {
    text-align: right;
    margin: 0 20rpx;
    padding: 30rpx 0;
    font-size: 32rpx;
}
.Total_price {
    color: #ad0e12;
    font-size: 32rpx;
}

.send-cost-item {
    display: flex;
    justify-content: space-between;
    margin: 0 20rpx;
    padding: 30rpx 0;
    border-bottom: 2rpx solid #f3f3f3;
}

.order_pay {
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 93rpx;
    line-height: 93rpx;
    justify-content: space-between;
    background: white;
 
}