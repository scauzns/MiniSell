<view class="detail-info">
  <image class='image' src="{{imgUrl}}{{foodItem.cover}}"  mode='widthFix'/>
  <view class="title">{{foodItem.title}}</view>
  <view class="desc">{{foodItem.fDesc}}</view>
  <view class="price">￥{{foodItem.price}}</view>
  <view class="sell-info">
    <view class="sell-info-item sales">月销量：100</view>
    <view class="sell-info-item praiseRate">好评率：99%</view>
    <!-- <view class="sales">100</view>
