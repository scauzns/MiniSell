<!--pages/detail/childCpns/w-detail-info/w-detail-info.wxml-->
<view class="detail-info">
  <image class='image' src="{{imgUrl}}{{foodItem.cover}}"  mode='widthFix'/>
  <view class="title">{{foodItem.title}}</view>
  <view class="desc">{{foodItem.fDesc}}</view>
  <view class="price">￥{{foodItem.price}}</view>
  <view class="sell-info">
    
    <view wx:if="{{foodItem.comments.length != 0}}" class="sell-info-item praiseRate">好评率: {{foodItem.praiseRate * 100}}%</view>
    <view class="sell-info-item sales">月销量: {{foodItem.sales}}</view>
  </view>
</view>

